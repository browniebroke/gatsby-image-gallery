{
  "private": true,
  "workspaces": [
    "gatsby-image-gallery",
    "example"
  ],
  "devDependencies": {
    "prettier": "2.2.1"
  },
  "scripts": {
    "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|md|mdx|yml|yaml)\"",
    "lint": "prettier --check \"**/*.+(js|jsx|ts|tsx|json|md|mdx|yml|yaml)\""
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
